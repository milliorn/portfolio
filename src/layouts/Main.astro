---
import Footer from "../components/Footer/Footer.astro";
import Navigation from "../components/Navigation/Navigation.astro";
import ThemeToggler from "../components/ThemeToggler.astro";
import { site } from "../config";
import "../styles/global.css";
import type { MainProps } from "./types";

// props
const props = Astro.props as MainProps;
const { title = `${site.owner} Portfolio` } = props;

// vars
const head = {
  links: {
    fonts:
      "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap",
    icon: "/nintendo2.svg",
    sitemap: "/sitemap-index.xml",
  },
  meta: {
    content: "My Professional Portfolio, Scott Milliorn",
    name: "description",
  },
};
---

<html lang="en">
  <head>
    <link href={head.links.fonts} rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href={head.links.icon} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="sitemap" href={head.links.sitemap} />
    <meta charset="utf-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />
    <meta name={head.meta.name} content={head.meta.content} />
    <title>{title}</title>
  </head>
  <body>
    <ThemeToggler />
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
