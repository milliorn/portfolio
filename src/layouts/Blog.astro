---
import Main from "./Main.astro";
import type { BlogProps } from "./types";

const props = Astro.props as BlogProps;

const { title, poster, subtitle } = props["frontmatter"]

const developerName = "Scott Milliorn";
const pageTitle = `${title} - ${developerName} Portfolio`;
---

<Main title={pageTitle}>
  <figure class="figure">
    <img src={poster} alt="" width="100%" height="auto" class="figure__image" />
    <figcaption class="figure__caption"></figcaption>
  </figure>
  <h1>{title}</h1>
  <h2>{subtitle}</h2>
  <slot />
</Main>

<style>
  h1 + h2 {
    margin-bottom: 3rem;
  }

  span {
    text-transform: capitalize;
  }

  .figure {
    margin: 0;
  }

  .figure__image {
    border-radius: 0.75rem;
    display: block;
    height: auto;
    margin: 0 auto;
    max-width: 100%;
  }

  .figure__caption {
    color: var(--color-gray-400);
    font-size: 0.8rem;
    margin: 0.5rem 0 1rem 0;
    text-align: center;
  }
</style>
