---
export type Props = {
  gradientFrom: string;
  gradientTo: string;
  title: string;
  to: string;
};

const { title, to, gradientFrom, gradientTo } = Astro.props;
---

<a href={to} class="card">
  <div class="card__inner">
    <div class="card__title">{title}</div>
    <!-- Render the arrow via HTML entity name: â†’ = &rarr;-->
    <div class="card__footer">&rarr;</div>
  </div>
</a>

<style define:vars={{ gradientFrom, gradientTo }}>
  .card {
    /** local CSS variable reused below */
    --radius: 10px;
    background: linear-gradient(135deg, var(--gradientFrom), var(--gradientTo));
    border-radius: var(--radius);
    box-shadow: 0 0 0 1px var(--grey-200), 0 2px 4px 0 var(--grey-200);
    padding: 4px;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }

  .card:hover {
    box-shadow: 0 0 0 1px var(--grey-300), 0 4px 8px 0 var(--grey-300);
    transform: scale(0.95);
  }

  .card__inner {
    background: var(--background);
    border-radius: var(--radius);
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    transition: all 0.2s ease-in-out;
  }

  .card__title {
    color: var(--grey-900);
    font-size: 1.2rem;
    font-weight: 500;
    line-height: 1.75rem;
    margin: 0;
  }

  .card__footer {
    color: var(--grey-900);
    font-size: 1.2rem;
    margin: auto 0 0 auto;
    padding-top: 2rem;
  }
</style>
